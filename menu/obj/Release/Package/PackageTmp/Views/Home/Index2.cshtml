@model menu.Models.ApplicationsViewModel
@{
    ViewBag.Title = "Home Page";
}

<link type="text/css" href="~/Content/menu.css" rel="stylesheet"/>
<div class="row">

    <div id="pad" class="menupad">
        <div id="menuBoxA" class="menubox" style="position:relative; margin-top:25px; display: grid; margin-top: 60px; border:none;">
            
            @foreach (var app in Model.Apps)
            {
                if (Model != null && Model.Apps != null && app.section == "ADMIN")
                {
                    <div class="buttonpad AD" id="@app.Id" onclick="location.href='@(app.AppUrl)';" style="grid-row: @app.GridRow; grid-column: @app.GridCol / span @app.ColSpan">
                        <div class="button-icon @(app.cssClass)-icon">
                        </div>
                        <br />
                        <h2>@app.text</h2>
                        
                    </div>            
                 }

            }
            <div class="buttonpad" style="grid-row:1; grid-column: 2 / span 1; background-color:transparent;">
            </div>          
        </div>
        <label class="menu-box-label">QA</label>
        <div id="menuBoxB" class="menubox" style="position:relative; margin-top:25px; display: grid;">
            
            @foreach (var app in Model.Apps)
            {
                if (Model != null && Model.Apps != null && app.section == "QA")
                {
                    <div class="buttonpad QA" id="@app.Id" onclick="location.href='@(app.AppUrl)';" style="grid-row: @app.GridRow; grid-column: @app.GridCol / span @app.ColSpan">
                        <div class="button-icon @(app.cssClass)-icon">
                        </div>
                        <br />
                        <h2>@app.text</h2>
                    </div>
                }

            }

        </div>
        <label class="menu-box-label">CTX</label>
        <div id="menuBoxC" class="menubox" style="position:relative; margin-top:25px; display: grid; margin-bottom:50px;">     
            @foreach (var app in Model.Apps)
            {
                if (Model != null && Model.Apps != null && app.section == "CTX")
                {
                    <div class="buttonpad CTX" id="@app.Id" onclick="location.href='@(app.AppUrl)';" style="grid-row: @app.GridRow; grid-column: @app.GridCol / span @app.ColSpan">
                        <div class="button-icon @(app.cssClass)-icon">
                        </div>
                        <br />
                        <h2>@app.text</h2>
                    </div>
                }

            }

        </div>

    </div>
    
</div>